<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@drawable/futuristic_bg_gradient"
    android:paddingBottom="?attr/actionBarSize"
    android:clipToPadding="false"
    tools:context=".ui.fragments.CompletedFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <FrameLayout
            android:id="@+id/loadingContainerCompleted"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"
            android:paddingTop="50dp"
            android:paddingBottom="50dp">

            <ProgressBar
                android:id="@+id/loadingProgressBarCompleted"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/neon_green"
                style="@style/Widget.AppCompat.ProgressBar" />

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/neon_ring_glow" 
                android:alpha="0.7" />

            <TextView
                android:id="@+id/loadingProgressBarTextCompleted"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Loading Data..."
                android:textColor="@color/neon_green"
                android:textSize="14sp"
                android:fontFamily="@font/bitcount_grid_double"
                android:alpha="0.8" />
        </FrameLayout>

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/completedChallengesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/glass_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/neon_green" 
            app:strokeWidth="1dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/cyber_card_glow_green_alpha" 
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="8dp">
                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:background="@drawable/ic_trophy_outline" 
                        android:layout_marginEnd="8dp" />
                    <TextView
                        android:id="@+id/textViewCompletedTitle"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Completed Challenges"
                        android:textColor="@color/white_shadowed"
                        android:textSize="20sp"
                        android:fontFamily="@font/bitcount_grid_double"
                        android:letterSpacing="0.05"
                        android:shadowColor="@color/neon_green"
                        android:shadowRadius="4"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@drawable/scan_line_gradient"
                    android:layout_marginBottom="12dp"
                    android:alpha="0.6" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/completedChallengesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:listitem="@layout/item_challenge_layout" 
                    android:minHeight="50dp" />

                <TextView
                    android:id="@+id/emptyStateTextViewCompleted"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="No challenges have been completed yet."
                    android:gravity="center"
                    android:textColor="@color/grey_light_transparent"
                    android:textSize="15sp"
                    android:fontFamily="@font/work_sans"
                    android:visibility="gone"
                    android:paddingVertical="24dp"
                    tools:visibility="visible"/>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>
