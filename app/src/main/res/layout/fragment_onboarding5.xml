<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_bg_gradient"
    tools:context=".ui.fragments.OnboardingFragment5">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/neon_pink"
                app:strokeWidth="1dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cyber_card_glow_pink_alpha"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/text1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bitcount_grid_double"
                        android:gravity="center"
                        android:text="Your Consistency Companion"
                        android:textColor="@color/white_shadowed"
                        android:textSize="26sp" />

                    <TextView
                        android:id="@+id/text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:fontFamily="sans-serif"
                        android:gravity="center"
                        android:paddingStart="16dp"
                        android:paddingEnd="16dp"
                        android:text="Your progress matters. We'll remind you to keep your challenge streak alive!\n\nYou can enable reminders later from Settings, or just Skip now if you donâ€™t need them."
                        android:textColor="@color/pink_shadowed"
                        android:textSize="16sp" />

                    <FrameLayout
                        android:id="@+id/timePickerContainer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingHorizontal="15dp">

                        <TimePicker
                            android:id="@+id/timePicker"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:timePickerMode="spinner"
                            android:theme="@style/MaterialTimePickerTheme"/>
                    </FrameLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/skipSetupButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="Skip Now &amp; Finish"
                        android:textColor="@color/white_shadowed"
                        app:cornerRadius="16dp"
                        android:textAllCaps="false"
                        app:backgroundTint="@android:color/transparent"
                        app:strokeColor="@color/pink_shadowed"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/finishSetupButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Set &amp; Finish"
                        android:textColor="@color/white_shadowed"
                        app:cornerRadius="16dp"
                        android:textAllCaps="false"
                        app:backgroundTint="@android:color/transparent"
                        app:strokeColor="@color/pink_shadowed"
                        app:strokeWidth="2dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>