<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginBottom="8dp"
    android:elevation="11dp"
    app:contentPadding="8dp"
    app:cardBackgroundColor="#1AFFFFFF"
    app:cardCornerRadius="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp"
        android:background="@drawable/challenge_bg">

        <TextView
            android:id="@+id/challengeTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Read Daily"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/unfollowBtn"
            android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.0" />

        <TextView
            android:id="@+id/challengeStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="12/30 Days Completed"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            app:layout_constraintTop_toBottomOf="@id/challengeTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/unfollowBtn"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/unfollowBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/baseline_close_24"
            android:background="@drawable/bg_circle_outline"
            android:padding="6dp"
            android:visibility="visible"
            app:tint="@color/white_shadowed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/followBtn"
            android:layout_marginEnd="8dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/followBtn"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/outline_check_24"
            android:background="@drawable/bg_circle_outline"
            android:padding="6dp"
            android:visibility="visible"
            app:tint="@color/white_shadowed"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.amitmatth.challengemonitor.ui.customview.HorizontalRoundedProgressBar
            android:id="@+id/progressBar"
            android:layout_width="0dp"
            android:layout_height="wrap_content" 
            android:layout_marginTop="12dp"
            app:hrp_barThickness="8dp"
            app:hrp_cornerRadius="4dp"
            app:hrp_backgroundColor="@color/grey_dark"
            app:hrp_progressColor="@color/neon_cyan"
            app:hrp_maxProgress="100" 
            app:hrp_progress="0"
            tools:hrp_progress="40"
            app:layout_constraintTop_toBottomOf="@id/challengeStatus"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
