<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_bg_gradient"
    tools:context=".ui.fragments.OnboardingFragment3">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/neon_cyan"
                app:strokeWidth="1dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <LinearLayout
                    android:id="@+id/centralContentGroup"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cyber_card_glow_pink_alpha"
                    android:gravity="center_horizontal"
                    android:padding="24dp">

                    <TextView
                        android:id="@+id/questionTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bitcount_grid_double"
                        android:gravity="center"
                        android:text="What should we call you?"
                        android:textColor="@color/white_shadowed"
                        android:textSize="30sp" />

                    <View
                        android:id="@+id/separator_line_name"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/scan_line_gradient"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp"
                        android:alpha="0.6" />

                    <TextView
                        android:id="@+id/instructionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans"
                        android:text="Enter your name"
                        android:textColor="@color/pink_shadowed"
                        android:textSize="16sp"
                        android:layout_marginBottom="8dp" />

                    <EditText
                        android:id="@+id/nameInput"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_rectangle"
                        android:ems="12"
                        android:inputType="textPersonName"
                        android:padding="12dp"
                        android:drawableEnd="@drawable/arrow_right"
                        android:shadowDx="0"
                        android:shadowDy="0"
                        android:shadowRadius="8"
                        android:textColor="@color/white_shadowed"
                        android:textColorHint="@color/grey_light_transparent"
                        android:hint="Your Name"/>



                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>