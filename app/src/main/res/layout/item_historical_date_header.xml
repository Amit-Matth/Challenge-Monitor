<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp"
    android:paddingTop="12dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/textViewDateHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceSubtitle1"
        android:fontFamily="@font/bitcount_grid_double"
        android:textColor="@color/pink_shadowed"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="September 20, 2023" xmlns:tools="http://schemas.android.com/tools" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/cardDarkBackground"
        android:layout_marginTop="4dp"/>

</LinearLayout>