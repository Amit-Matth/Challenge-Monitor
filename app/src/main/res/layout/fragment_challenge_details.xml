<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/challengeDetailsRootNestedScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_bg_gradient"
    android:fillViewport="true"
    tools:context=".ui.fragments.ChallengeDetailsFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Animated Holographic Loading for Details -->
        <FrameLayout
            android:id="@+id/loadingContainerDetails"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"> <!-- Set visibility in code -->

            <ProgressBar
                android:id="@+id/loadingProgressBarDetails"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:indeterminateTint="@color/neon_pink" />

            <View
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/neon_ring_glow"
                android:alpha="0.7" />

            <TextView
                android:id="@+id/loadingProgressBarTextDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80dp"
                android:text="Loading Challenge Data..."
                android:textColor="@color/neon_pink"
                android:textSize="14sp"
                android:fontFamily="@font/bitcount_grid_double"
                android:alpha="0.8" />
        </FrameLayout>

        <!-- Main Content for Challenge Details -->
        <LinearLayout
            android:id="@+id/contentGroupDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="visible"> <!-- Set visibility in code -->

            <!-- Main Details Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/mainDetailsCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/neon_pink"
                app:strokeWidth="1dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cyber_card_glow_pink_alpha"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/challengeDetailTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bitcount_grid_double"
                        android:gravity="center_horizontal"
                        android:textColor="@color/white_shadowed"
                        android:textSize="28sp"
                        android:shadowColor="@color/neon_pink"
                        android:shadowRadius="6"
                        android:layout_marginBottom="8dp"
                        tools:text="Challenge Title" />

                    <TextView
                        android:id="@+id/challengeDetailDescriptionTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/work_sans"
                        android:textColor="@color/white_shadowed"
                        android:textSize="16sp"
                        android:layout_marginBottom="16dp"
                        tools:text="This is a detailed description of the challenge, explaining what needs to be done." />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:id="@+id/challengeDetailDurationTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="8dp"
                            android:textColor="@color/pink_shadowed"
                            android:textSize="20sp"
                            app:drawableStartCompat="@drawable/outline_card_info_24"
                            app:drawableTint="@color/pink_shadowed"
                            tools:text="30 Days" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:layout_weight="1"/>

                        <ImageButton
                            android:id="@+id/skipChallengeButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_outline"
                            android:contentDescription="Skip"
                            android:padding="8dp"
                            android:src="@drawable/fast_forward_24px"
                            app:tint="@color/pink_shadowed"
                            android:layout_marginEnd="8dp"/>

                        <ImageButton
                            android:id="@+id/editChallengeButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_outline"
                            android:contentDescription="Edit"
                            android:padding="8dp"
                            android:src="@drawable/edit_24px"
                            app:tint="@color/pink_shadowed"
                            android:layout_marginEnd="8dp"/>

                        <ImageButton
                            android:id="@+id/deleteChallengeButton"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:background="@drawable/bg_circle_outline"
                            android:contentDescription="Delete"
                            android:padding="8dp"
                            android:src="@drawable/delete_24px"
                            app:tint="@color/pink_shadowed" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/datesDurationContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start|center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/baseline_calendar_today_24"
                                android:tint="@color/pink_shadowed" />

                            <TextView
                                android:id="@+id/challengeDetailStartDateTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white_shadowed"
                                android:textSize="16sp"
                                tools:text="Start: 2023-01-01" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="end|center_vertical"
                            android:orientation="horizontal">

                            <androidx.appcompat.widget.AppCompatImageView
                                android:layout_width="18dp"
                                android:layout_height="18dp"
                                android:layout_marginEnd="6dp"
                                android:src="@drawable/baseline_calendar_today_24"
                                android:tint="@color/pink_shadowed" />

                            <TextView
                                android:id="@+id/challengeDetailEndDateTextView"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textColor="@color/white_shadowed"
                                android:textSize="16sp"
                                tools:text="End: 2023-01-30" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/challengeDetailProgressLabelTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Progress:"
                            android:textColor="@color/pink_shadowed"
                            android:textSize="16sp" />

                        <ProgressBar
                            android:id="@+id/challengeDetailProgressBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="0dp"
                            android:layout_height="12dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_weight="1"
                            android:max="100"
                            android:progress="60"
                            android:progressDrawable="@drawable/progress_bar_orange" />

                        <TextView
                            android:id="@+id/challengeDetailProgressTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/pink_shadowed"
                            android:textSize="16sp"
                            tools:text="18/30 Days" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Calendar Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/calendarCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/neon_cyan"
                app:strokeWidth="1dp"
                android:layout_marginBottom="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cyber_card_glow_cyan_alpha"
                    android:padding="16dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/calendarControlsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <ImageButton
                            android:id="@+id/prevMonthButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Previous Month"
                            android:src="@drawable/arrow_left"
                            app:layout_constraintBottom_toBottomOf="parent" 
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/pink_shadowed" />

                        <TextView
                            android:id="@+id/monthYearTextView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/bitcount_grid_double"
                            android:textColor="@color/white_shadowed"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@id/nextMonthButton"
                            app:layout_constraintStart_toEndOf="@+id/prevMonthButton"
                            app:layout_constraintTop_toTopOf="parent"
                            tools:text="July 2023" />

                        <ImageButton
                            android:id="@+id/nextMonthButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Next Month"
                            android:src="@drawable/arrow_right"
                            app:layout_constraintBottom_toBottomOf="parent" 
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:tint="@color/pink_shadowed" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <LinearLayout
                        android:id="@+id/dayLabelsContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="4dp">

                        <TextView style="@style/DayLabelTextStyle" android:text="Mon" />
                        <TextView style="@style/DayLabelTextStyle" android:text="Tue" />
                        <TextView style="@style/DayLabelTextStyle" android:text="Wed" />
                        <TextView style="@style/DayLabelTextStyle" android:text="Thu" />
                        <TextView style="@style/DayLabelTextStyle" android:text="Fri" />
                        <TextView style="@style/DayLabelTextStyle" android:text="Sat" />
                        <TextView style="@style/DayLabelTextStyle" android:text="Sun" />
                    </LinearLayout>

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/calendarRecyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:overScrollMode="never"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="7"
                        tools:itemCount="35"
                        tools:listitem="@layout/item_calendar_day" />

                    <LinearLayout
                        android:id="@+id/compactStatusLegendContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="12dp" 
                        android:paddingBottom="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_dot_green"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Followed"
                                android:textColor="@color/green_success"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_dot_red"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Not Followed"
                                android:textColor="@color/red_unfollowed"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_dot_orange"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Skipped"
                                android:textColor="@color/orange_skipped"
                                android:textSize="10sp"/>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:gravity="center">
                            <View
                                android:layout_width="8dp"
                                android:layout_height="8dp"
                                android:background="@drawable/status_dot_blue"
                                android:layout_marginEnd="4dp"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Pending"
                                android:textColor="@color/blue_followed"
                                android:textSize="10sp"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Log History Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/logHistoryCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="20dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/neon_cyan"
                app:strokeWidth="1dp"
                android:layout_marginBottom="20dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/cyber_card_glow_cyan_alpha"
                    android:padding="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:id="@+id/logHistoryTitle"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="DAILY LOG HISTORY"
                            android:textColor="@color/white_shadowed"
                            android:textSize="20sp"
                            android:fontFamily="@font/bitcount_grid_double"
                            android:letterSpacing="0.05"
                            android:shadowColor="@color/neon_cyan"
                            android:shadowRadius="4"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@drawable/scan_line_gradient"
                        android:layout_marginBottom="12dp"
                        android:alpha="0.6" />

                    <LinearLayout
                        android:id="@+id/logHistoryContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@android:color/transparent"
                        android:minHeight="96dp"
                        android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:textColor="#FFCCCCCC"
                        android:textSize="16sp"
                        android:paddingTop="32dp"
                        android:paddingBottom="32dp"
                        android:text="Select a date to view its history." />
                </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>
    </FrameLayout>
</androidx.core.widget.NestedScrollView>