<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="6dp"
    app:cardBackgroundColor="@color/cardDarkBackgroundTransparent"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:strokeColor="@color/grey_light"
    app:strokeWidth="0.5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" 
        android:padding="12dp"
        android:gravity="center_vertical">

     <LinearLayout
            android:layout_width="match_parent" 
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/metricIcon"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginBottom="4dp"
                android:src="@drawable/cyber_diamond_shape"
                app:tint="@color/white_shadowed" />

            <TextView
                android:id="@+id/metricTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceSubtitle1"
                android:textColor="@color/white_shadowed"
                android:fontFamily="@font/work_sans"
                android:textSize="15sp"
                android:layout_marginBottom="4dp" 
                tools:text="Metric Title" />

            <com.amitmatth.challengemonitor.ui.customview.HorizontalRoundedProgressBar
                android:id="@+id/metricProgressBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" 
                app:hrp_barThickness="10dp" 
                app:hrp_cornerRadius="5dp"
                app:hrp_backgroundColor="@color/grey_dark"
                app:hrp_progressColor="@color/neon_cyan" 
                app:hrp_maxProgress="100"
                app:hrp_progress="0"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="6dp"/>

            <TextView
                android:id="@+id/metricValueText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:textColor="@color/white_shadowed"
                android:fontFamily="@font/work_sans"
                android:textStyle="bold"
                android:textSize="15sp"
                tools:text="Value" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>