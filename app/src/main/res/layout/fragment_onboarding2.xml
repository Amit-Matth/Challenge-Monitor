<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_bg_gradient"
    tools:context=".ui.fragments.OnboardingFragment2">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"> 

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/privacy_card"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/glass_bg"
                app:cardCornerRadius="20dp"
                app:strokeColor="@color/neon_pink"
                app:strokeWidth="1dp"
                android:layout_marginHorizontal="24dp"
                app:layout_constraintTop_toTopOf="parent" 
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/cyber_card_glow_pink_alpha"
                    android:padding="24dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/privacy_icon_image_view"
                        android:layout_width="180dp"
                        android:layout_height="180dp"
                        android:src="@drawable/ic_privacy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/pink_shadowed" />

                    <TextView
                        android:id="@+id/title_privacy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/bitcount_grid_double"
                        android:gravity="center"
                        android:text="We respect your\nprivacy."
                        android:textColor="@color/white_shadowed"
                        android:textSize="25sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/privacy_icon_image_view" />

                    <View
                        android:id="@+id/separator_line_privacy"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@drawable/scan_line_gradient"
                        android:layout_marginTop="16dp"
                        android:alpha="0.6"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/title_privacy" />

                    <TextView
                        android:id="@+id/privacy_text_view"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:fontFamily="@font/open_sans"
                        android:gravity="center"
                        android:text="All your data stays safely on your device. Nothing is sent to any server. Your challenges, your progress all yours, fully private."
                        android:textColor="@color/white_shadowed"
                        android:textSize="16sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/separator_line_privacy" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>