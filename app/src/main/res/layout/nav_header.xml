<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/futuristic_bg_gradient"
    android:padding="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/profile_image_card_container"
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="60dp" 
        app:strokeColor="@color/neon_cyan"
        app:strokeWidth="2dp"
        app:cardElevation="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp">

        <FrameLayout
            android:id="@+id/profile_image_container_internal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/nav_header_profile_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/outline_account_circle_24"
                android:scaleType="centerCrop"
                android:padding="2dp"/>

            <ImageView
                android:id="@+id/nav_header_edit_profile_icon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_gravity="bottom|end"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/bg_circle_button"
                android:padding="8dp"
                android:src="@drawable/edit_24px"
                app:tint="@color/neon_cyan" 
                android:contentDescription="Edit Profile" />
        </FrameLayout>
    </com.google.android.material.card.MaterialCardView>

    <LinearLayout
        android:id="@+id/text_container"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toEndOf="@id/profile_image_card_container" 
        app:layout_constraintTop_toTopOf="@id/profile_image_card_container" 
        app:layout_constraintBottom_toBottomOf="@id/profile_image_card_container" 
        app:layout_constraintEnd_toEndOf="parent"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/nav_header_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, Amit"
            android:textSize="20sp"
            android:fontFamily="@font/orbitron_medium" 
            android:textColor="@color/white_shadowed"
            android:shadowColor="@color/neon_cyan"
            android:shadowDx="1"
            android:shadowDy="1"
            android:shadowRadius="3" />

        <TextView
            android:id="@+id/nav_header_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wednesday, July 10"
            android:textColor="@color/neon_cyan_transparent" 
            android:fontFamily="@font/work_sans" 
            android:textSize="14sp"
            android:layout_marginTop="4dp" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>