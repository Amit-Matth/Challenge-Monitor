<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="8dp"
    android:elevation="11dp"
    app:contentPadding="8dp"
    app:cardBackgroundColor="#1AFFFFFF"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@drawable/bg_challenge_card_two_tone">

    <TextView
        android:id="@+id/textViewChallengeTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?attr/textAppearanceListItem"
        android:textSize="18sp"
        android:fontFamily="@font/space_mono"
        android:textColor="@color/white_shadowed"
        tools:text="Challenge Title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="4dp">

        <TextView
            android:id="@+id/textViewCurrentStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/white_shadowed"
            tools:text="Current Streak: 5 days" />

        <TextView
            android:id="@+id/textViewLongestStreak"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:textAppearance="?attr/textAppearanceListItemSecondary"
            android:textColor="@color/white"
            tools:text="Longest Streak: 10 days" />
    </LinearLayout>

</LinearLayout>
</androidx.cardview.widget.CardView>