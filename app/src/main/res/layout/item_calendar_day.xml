<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/dayCellContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp" 
    android:layout_margin="2dp"
    android:background="@drawable/bg_calendar_unselected_new">

    <TextView
        android:id="@+id/dayNumberTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/work_sans"
        android:gravity="center"
        android:textColor="@color/white_shadowed"
        android:textSize="14sp"
        android:textStyle="bold"
        android:maxLines="1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:text="31" />

    <ImageView
        android:id="@+id/logStatusIndicatorImageView"
        android:layout_width="8dp"
        android:layout_height="8dp"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/dayNumberTextView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_calendar_dot"
        app:tint="@color/calendar_dot_color"
        android:visibility="gone"
        tools:visibility="visible"
        android:contentDescription="Log Status" />

</androidx.constraintlayout.widget.ConstraintLayout>