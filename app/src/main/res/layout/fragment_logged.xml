<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/loggedFragmentRootScrollView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/futuristic_bg_gradient"
    android:fillViewport="true"
    tools:context=".ui.fragments.LoggedFragment">

    <LinearLayout
        android:id="@+id/loggedContentGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loggedChallengesCard"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardBackgroundColor="@color/glass_bg"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp"
            app:strokeColor="@color/neon_pink"
            app:strokeWidth="1dp">

            <LinearLayout
                android:id="@+id/loggedCardInnerLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cyber_card_glow_pink_alpha"
                android:orientation="vertical"
                android:padding="16dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/data_stream_icon" />

                    <TextView
                        android:id="@+id/loggedTitleTextView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/bitcount_grid_double"
                        android:letterSpacing="0.05"
                        android:shadowColor="@color/neon_pink"
                        android:shadowRadius="4"
                        android:text="LOGGED TODAY"
                        android:textColor="@color/white_shadowed"
                        android:textSize="20sp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="12dp"
                    android:alpha="0.6"
                    android:background="@drawable/scan_line_gradient" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/loggedChallengesRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:paddingHorizontal="0dp"
                    tools:listitem="@layout/item_challenge_layout" />

                <TextView
                    android:id="@+id/emptyStateTextViewLogged"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/work_sans"
                    android:gravity="center"
                    android:paddingVertical="24dp"
                    android:text="No challenges logged for selected date."
                    android:textColor="@color/grey_light_transparent"
                    android:textSize="15sp"
                    android:visibility="gone"
                    tools:visibility="visible" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>